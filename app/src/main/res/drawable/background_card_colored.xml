<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/primaryDarkColor"
                android:endColor="@color/colorBackground"
                android:angle="270"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:bottom="4dp" android:left="0.1dp" android:right="0.1dp" android:top="0.1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/coloredCardColor"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>